import requests

# Örnek sayfa: Türkçe Vikipedi'de "Anasayfa" tartışma sayfası
title = "Tartışma:Anasayfa"

# MediaWiki API URL'si
url = "https://tr.wikipedia.org/w/api.php"

# API çağrısı için gerekli parametreler
params = {
    "action": "query",
    "format": "json",
    "prop": "revisions",
    "titles": title,
    "rvprop": "content",
    "rvslots": "main"
}

# API'ye istek gönder
response = requests.get(url, params=params)
data = response.json()

# Sayfa içeriğini al ve yazdır
pages = data["query"]["pages"]
for page_id in pages:
    content = pages[page_id]["revisions"][0]["slots"]["main"]["*"]
    print(content)
